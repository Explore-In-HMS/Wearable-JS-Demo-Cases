{
  "app": {
    "bundleName": "com.wearableJS.turkeyp3",
    "vendor": "wearableJS",
    "version": {
      "code": 1000000,
      "name": "1.0.0"
    }
  },
  "deviceConfig": {},
  "module": {
    "package": "com.wearableJS.turkeyp3",
    "name": ".MyApplication",
    "mainAbility": "com.wearableJS.turkeyp3.MainAbility",
    "deviceType": [
      "phone",
      "wearable"
    ],
    "reqPermissions": [
      {
        "name": "ohos.permission.ACTIVITY_MOTION",
        "reason": "get_step.data",
        "usedScene": {
          "ability": [
            "com.wearableJS.turkeyp3.MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "name": "ohos.permission.ACCELEROMETER",
        "reason": "accelerometer",
        "usedScene": {
          "ability": [
            ".MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.READ_HEALTH_DATA",
        "reason": "heartRate",
        "usedScene": {
          "ability": [
            ".MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.VIBRATE",
        "reason": "vibrate",
        "usedScene": {
          "ability": [
            ".MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.LOCATION",
        "reason": "location",
        "usedScene": {
          "ability": [
            "com.wearableJS.turkeyp3.MainAbility"
          ],
          "when": "always"
        }
      },
      {
        "name": "ohos.permission.GET_BUNDLE_INFO",
        "reason": "hasInstalled",
        "usedScene": {
          "ability": [
            "com.wearableJS.turkeyp3.MainAbility"
          ],
          "when": "always"
        }
      }
    ],
    "distro": {
      "deliveryWithInstall": true,
      "moduleName": "entry",
      "moduleType": "entry",
      "installationFree": false
    },
    "abilities": [
      {
        "skills": [
          {
            "entities": [
              "entity.system.home"
            ],
            "actions": [
              "action.system.home"
            ]
          }
        ],
        "name": "com.wearableJS.turkeyp3.MainAbility",
        "icon": "$media:icon",
        "description": "$string:mainability_description",
        "label": "$string:entry_MainAbility",
        "type": "page",
        "launchType": "standard"
      }
    ],
    "js": [
      {
        "pages": [
          "pages/index/index",
          "pages/sensors/sensors",
          "pages/deviceinfo/deviceinfo",
          "pages/geographiclocation/geographiclocation",
          "pages/battery/battery",
          "pages/brightness/brightness",
          "pages/vibration/vibration",
          "pages/heartrate/heartrate",
          "pages/light/light",
          "pages/barometer/barometer",
          "pages/stepcounter/stepcounter",
          "pages/deviceorientation/deviceorientation",
          "pages/compass/compass",
          "pages/accelerometer/accelerometer",
          "pages/gyroscope/gyroscope",
          "pages/compassanimator/compassanimator",
          "pages/systemcapabilities/systemcapabilities",
          "pages/applicationmanagement/applicationmanagement",
          "pages/basicFeatures/basicFeatures",
          "pages/timer/timer",
          "pages/popupWindow/popupWindow"
          "pages/applicationconf/applicationconf"
        ],
        "name": "default",
        "window": {
          "designWidth": 720,
          "autoDesignWidth": true
        }
      }
    ]
  }
}